<div class="page-header">
	<h1>Puenteos</h1>

	<ul class="actions">
		<li><%= link_to fa_icon("plus") + "Nuevo Puenteo", new_puenteo_path, class: "btn btn-success" %></li>
	</ul>

</div>
	
<div class="container">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Numero</th>
				<th>Actualizado</th>				
				<th>ELIMINAR</th>
			</tr>		
		</thead>
		<tbody>
			<% @puenteo.each do |p| %>
				<tr>
					<td><%= link_to p.puenteo_id, p %></td>
					<td><%= p.updated_at.strftime("%v %H:%M:%S") %></td>
					<td><%= link_to "Borrar", p, method: :delete,
					data: {confirm: "Â¿Seguro desea borrar?"} %></td>
				</tr>
			<% end %>			
		</tbody>		
	</table>
	
</div>

<div id="footer">
	<% t = Time.now %>
	<p><%= t.strftime("%v %H:%M:%S") %></p>
</div>

