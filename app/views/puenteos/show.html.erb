<div class="page-header">
	<h1>Puenteo <%= @puenteo.puenteo_id %></h1>
	<ul class="actions">
		<li><%= link_to "Home", puenteos_path, class: "btn btn-primary" %></li>
		<li><%= link_to "Editar", edit_puenteo_path, class: "btn btn-primary" %></li>
		<li><%= link_to "Agregar entrada", new_puenteo_bitacora_path(@puenteo), class: "btn btn-primary" %></li>		
	</ul>
</div>



<div class="container">
	<h2>Descripcion</h2>
	<p><%= @puenteo.descripcion %></p>
	<% if @puenteo.hojapuenteo.present? %>
		<h4>Adjuntos</h4>
		<div class="attachment">
			<p>
				<%= link_to File.basename(@puenteo.hojapuenteo.url), @puenteo.hojapuenteo.url %>
				(<%= number_to_human_size(@puenteo.hojapuenteo.size) %>)
			</p>	
		</div>
	<% end %>

</div>

<div class="container">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Accion</th>
				<th>Fecha</th>
			</tr>
		</thead>

		<tbody>
			<% @puenteo.bitacoras.each do |b| %>
			<tr>
				<td><%=link_to b.accion, [@puenteo, b] %></td>
				<td><%= b.created_at.strftime("%v %H:%M:%S") %></td>
			</tr>
			<% end %>
		</tbody>
		
	</table>
</div>




